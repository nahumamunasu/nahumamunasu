int main()
{
 setlocale(LC_ALL, "Rus");
 int x, y;


 cout << "Введите первую дробь: " << endl;
 cin >> x >> y;
 drob d1(x, y);
 cout << "Введите вторую дробь: " << endl;
 cin >> x >> y;
 drob d2(x, y);

 drob d3 = d1 * d2;
 d3.reduce().print();

 system("Pause");
 return 0;
}
